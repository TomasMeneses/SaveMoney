<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:orientation="vertical"
        android:background="@drawable/gradient" android:layout_width="match_parent">

    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5">

        <TextView
                android:text="R$0,00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:id="@+id/saldo_textView"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="43dp"/>
        <TextView
                android:text="Saldo atual das finanÃ§as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:id="@+id/home_textView"
                android:layout_alignStart="@+id/saldo_textView"
                android:layout_marginBottom="31dp"
                android:layout_marginStart="-70dp"/>
    </RelativeLayout>

    <RelativeLayout

            android:layout_weight=".3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


    >

        <ListView
                android:id="@+id/ListaPrincipal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </ListView>

    </RelativeLayout>
    <RelativeLayout
            android:layout_weight=".6"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"    >


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_weight=".2"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_home_black_40dp"
                        android:id="@+id/imageViewHome" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight=".2"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/grafico_40dp"
                        android:id="@+id/imageViewgraf" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight=".2"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_circle_black_40dp"
                        android:id="@+id/imageViewAdd" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight=".2"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_person_black_40dp"
                        android:id="@+id/imageViewPerfil" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight=".2"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_settings_black_40dp"
                        android:id="@+id/imageViewSett" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>