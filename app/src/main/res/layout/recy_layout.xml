<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:maxHeight="250dp">

    <TextView
            android:text="User ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="27dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/userId" android:layout_marginTop="75dp" android:layout_marginLeft="27dp"
            android:textSize="18sp"/>
    <TextView
            android:text="User Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="29dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/userEmailView" android:layout_marginTop="32dp" android:layout_marginLeft="29dp"
            android:textSize="24sp"/>
</android.support.v7.widget.CardView>