<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".LoginActivity">

    <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp" app:srcCompat="@drawable/logo" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/imageView" android:layout_marginTop="64dp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textSize="20dp"
            android:background="#a72bd1e4"
            android:drawableLeft="@drawable/ic_action_mail"
            android:id="@+id/editTxtMail" android:hint="E-mail" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_action_lock"
            android:background="#a72bd1e4"
            android:layout_alignParentBottom="true" android:id="@+id/editTSenha"
            android:layout_alignStart="@+id/editTxtMail" android:layout_marginBottom="231dp" android:hint="Senha"/>
    <Button
            android:text="Entrar"
            android:background="@color/colorAccent"
            android:layout_width="200dp"
            android:layout_height="40dp" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/btnLogin" android:layout_marginBottom="131dp"/>
    <Button
            android:text="Cadastrar"
            android:background="@color/colorAccent"

            android:layout_width="200dp"
            android:layout_height="40dp" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/btnCadastrar" android:layout_marginBottom="74dp"/>
</RelativeLayout>