<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".LoginActivity">

    <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp" app:srcCompat="@drawable/logo" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/imageView" android:layout_marginTop="28dp"/>
    <android.support.design.widget.TextInputEditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:cornerRadius="15dp"
            android:inputType="textPersonName"
            android:textColorHint="#fdfcfc"
            android:ems="10"
            android:textSize="20dp"
            android:background="#a72bd1e4"
            android:drawableLeft="@drawable/ic_action_mail"
            android:id="@+id/editTxtMail" android:hint="E-mail"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="219dp"/>
    <android.support.design.widget.TextInputEditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:cornerRadius="15dp"
            android:textColorHint="#fdfcfc"
            android:inputType="textPassword"
            android:ems="10"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_action_lock"
            android:background="#a72bd1e4"
            android:layout_alignParentBottom="true" android:id="@+id/editTSenha"
            android:layout_marginBottom="223dp" android:hint="Senha"
            android:layout_marginStart="91dp" android:layout_marginTop="45dp" android:layout_below="@+id/editTxtMail"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="93dp" android:layout_marginEnd="93dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="91dp" android:layout_alignParentLeft="true"/>
    <android.support.design.button.MaterialButton
            android:text="Entrar"
            android:background="@color/colorAccent"
            android:textColor="#fdfdfd"

            android:textSize="20dp"
            app:cornerRadius="15dp"
            android:layout_width="200dp"
            android:layout_height="50dp" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/btnLogin" android:layout_marginBottom="131dp"/>

    <android.support.design.button.MaterialButton
            android:text="Cadastrar"
            android:background="@color/colorAccent"
            android:textColor="#fdfdfd"
            android:textSize="20dp"
            app:cornerRadius="15dp"
            android:layout_width="200dp"
            android:layout_height="50dp" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/btnCadastrar" android:layout_marginBottom="74dp"/>
</RelativeLayout>