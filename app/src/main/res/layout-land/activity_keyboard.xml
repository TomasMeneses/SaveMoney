<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".KeyboardActivity">

    <android.support.design.widget.TextInputEditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:cornerRadius="15dp"
            android:inputType="numberDecimal"
            android:textColorHint="#fdfcfc"
            android:ems="10"
            android:textSize="20dp"
            android:background="#a72bd1e4"
            android:drawableLeft="@drawable/ic_monetization_on_white_24dp"
            android:id="@+id/editTxtReceita" android:hint="@string/receita"
            android:layout_alignParentTop="true"
            android:layout_marginTop="44dp" android:layout_alignStart="@+id/mapView2"/>
    <android.support.design.widget.TextInputEditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:cornerRadius="15dp"
            android:inputType="numberDecimal"
            android:textColorHint="#fdfcfc"
            android:ems="10"
            android:textSize="20dp"
            android:background="#a72bd1e4"
            android:drawableLeft="@drawable/ic_monetization_on_white_24dp"
            android:id="@+id/editTxtDespesa" android:hint="@string/despesas"
            android:layout_alignParentTop="true"
            android:layout_marginTop="104dp" android:layout_alignStart="@+id/mapView2"
            android:layout_marginStart="-1dp"/>
    <android.support.design.button.MaterialButton
            android:text="@string/ok"
            android:background="@color/colorAccent"
            android:textColor="#fdfdfd"

            android:textSize="20dp"
            app:cornerRadius="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" android:layout_below="@+id/editTxtReceita"/>
    <com.google.android.gms.maps.MapView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapView2" android:layout_centerInParent="true"/>

</RelativeLayout>